#MENENTUKAN IMAGE
FROM node:18.16

#PERINTAH YANG DIJALANKAN SAAT PEMBUATAN KONTAINER
RUN apt update -y 

#COPY FILE apps
ADD . /app

RUN npm install

#MAINTAINER IMAGE

LABEL email="benyamin.fajri@gmail.com"

# PERINTAH YANG DIJALANKAN SAAT KONTAINER PERTAMA KALI JALAN
CMD ["npm", "start"]

# CUMAN DESKRIPSI KE MANA PORT NYA, BUKAN BENAR-BENAR EXPOSE 3000
EXPOSE 3000